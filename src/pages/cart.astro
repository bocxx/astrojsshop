---
import Layout from '../layouts/Layout.astro';

const user = Astro.locals.user;

// Redirect to login if not authenticated
if (!user) {
  return Astro.redirect('/login');
}
---

<Layout title="Winkelwagen">
  <div class="space-y-8 max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <div class="space-y-2">
        <h1 class="text-3xl font-medium text-[--color-brand-blue]">Jouw Winkelwagen</h1>
        <p class="text-sm text-[--color-brand-blue]/70">
          Bekijk en wijzig je bestelling voordat je deze plaatst
        </p>
      </div>
      <a href="/" class="text-[--color-brand-blue] hover:text-[--color-brand-purple] transition-colors flex items-center space-x-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span>Terug naar foto's</span>
      </a>
    </div>

    <!-- Empty Cart Message -->
    <div id="emptyCart" class="hidden bg-gradient-to-br from-[--color-brand-beige]/30 to-[--color-brand-purple]/5 rounded-2xl p-12 text-center border-2 border-dashed border-[--color-brand-purple]/20">
      <div class="w-32 h-32 mx-auto mb-6 opacity-50">
        <img src="/logo.svg" alt="Foto's Logo" class="w-full h-full" />
      </div>
      <h2 class="text-xl font-medium text-[--color-brand-blue] mb-2">Je winkelwagen is leeg</h2>
      <p class="text-[--color-brand-blue]/60 mb-6">Voeg foto's toe om een bestelling te plaatsen</p>
      <a href="/" class="inline-flex items-center space-x-2 px-6 py-3 bg-gradient-to-r from-[--color-brand-blue] to-[--color-brand-purple] text-gray-900 rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-200 font-medium">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span>Bekijk foto's</span>
      </a>
    </div>

    <!-- Cart Items -->
    <div id="cartContent" class="space-y-6">
      <!-- Cart Items Grid -->
      <div id="cartItemsGrid" class="space-y-4">
        <!-- Items will be inserted here by JavaScript -->
      </div>

      <!-- Cart Summary -->
      <div class="bg-gradient-to-br from-[--color-brand-beige]/30 to-[--color-brand-purple]/10 rounded-2xl p-6 border border-[--color-brand-purple]/20">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-lg font-medium text-[--color-brand-blue]">Overzicht</h2>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-[--color-brand-blue]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span id="totalItems" class="text-2xl font-bold text-[--color-brand-blue]">0</span>
            <span class="text-[--color-brand-blue]/70">foto's</span>
          </div>
        </div>
        
        <div class="space-y-3">
          <button id="clearCart" class="w-full px-5 py-2.5 bg-white text-[--color-brand-coral] border-2 border-[--color-brand-coral]/30 rounded-xl hover:bg-[--color-brand-coral] hover:text-gray-900 hover:border-[--color-brand-coral] transition-all duration-200 font-medium flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <span>Winkelwagen legen</span>
          </button>
          
          <button id="placeOrderBtn" class="w-full px-5 py-3 bg-gradient-to-r from-[--color-brand-coral] to-[--color-brand-purple] text-gray-900 rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-200 font-medium flex items-center justify-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Bestelling Plaatsen</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { actions } from 'astro:actions';
    
    const cart = new Map<string, { id: string; name: string; quantity: number }>();
    
    // Load cart from localStorage
    function loadCart() {
      const saved = localStorage.getItem('photo-cart');
      if (saved) {
        try {
          const data = JSON.parse(saved);
          data.forEach((item: any) => cart.set(item.id, item));
        } catch (e) {
          console.error('Failed to load cart', e);
        }
      }
    }
    
    // Save cart to localStorage
    function saveCart() {
      localStorage.setItem('photo-cart', JSON.stringify(Array.from(cart.values())));
    }
    
    function updateQuantity(photoId: string, change: number) {
      const item = cart.get(photoId);
      if (!item) return;
      
      item.quantity += change;
      
      if (item.quantity <= 0) {
        cart.delete(photoId);
      }
      
      saveCart();
      renderCart();
    }
    
    function removeItem(photoId: string) {
      cart.delete(photoId);
      saveCart();
      renderCart();
    }
    
    function renderCart() {
      const cartItemsGrid = document.getElementById('cartItemsGrid');
      const totalItems = document.getElementById('totalItems');
      const emptyCart = document.getElementById('emptyCart');
      const cartContent = document.getElementById('cartContent');
      
      if (!cartItemsGrid || !totalItems || !emptyCart || !cartContent) return;
      
      const total = Array.from(cart.values()).reduce((sum, item) => sum + item.quantity, 0);
      totalItems.textContent = total.toString();
      
      if (cart.size === 0) {
        emptyCart.classList.remove('hidden');
        cartContent.classList.add('hidden');
        return;
      }
      
      emptyCart.classList.add('hidden');
      cartContent.classList.remove('hidden');
      
      cartItemsGrid.innerHTML = '';
      cart.forEach((item) => {
        const div = document.createElement('div');
        div.className = 'bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-lg transition-all duration-200 border border-[--color-brand-purple]/10';
        div.innerHTML = `
          <div class="flex items-center p-4 space-x-4">
            <div class="w-24 h-24 rounded-xl overflow-hidden flex-shrink-0 bg-gradient-to-br from-[--color-brand-purple]/15 to-[--color-brand-coral]/15">
              <img 
                src="/api/photos/thumb/${item.id}" 
                alt="${item.name}"
                class="w-full h-full object-cover"
              />
            </div>
            
            <div class="flex-1 min-w-0">
              <h3 class="text-base font-medium text-[--color-brand-blue] truncate">${item.name}</h3>
              <div class="flex items-center space-x-3 mt-3">
                <button 
                  class="decrease-btn w-8 h-8 flex items-center justify-center bg-[--color-brand-purple]/10 hover:bg-[--color-brand-purple]/20 text-[--color-brand-purple] rounded-lg transition-colors"
                  data-photo-id="${item.id}"
                  ${item.quantity <= 1 ? 'disabled opacity-50 cursor-not-allowed' : ''}
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                  </svg>
                </button>
                
                <span class="text-lg font-semibold text-[--color-brand-blue] min-w-[2rem] text-center">${item.quantity}</span>
                
                <button 
                  class="increase-btn w-8 h-8 flex items-center justify-center bg-[--color-brand-purple]/10 hover:bg-[--color-brand-purple]/20 text-[--color-brand-purple] rounded-lg transition-colors"
                  data-photo-id="${item.id}"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                  </svg>
                </button>
              </div>
            </div>
            
            <button 
              class="remove-btn flex-shrink-0 p-2 text-[--color-brand-coral] hover:bg-[--color-brand-coral]/10 rounded-lg transition-colors"
              data-photo-id="${item.id}"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        `;
        cartItemsGrid.appendChild(div);
      });
      
      // Add event listeners
      document.querySelectorAll('.increase-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const photoId = (e.currentTarget as HTMLElement).dataset.photoId!;
          updateQuantity(photoId, 1);
        });
      });
      
      document.querySelectorAll('.decrease-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const photoId = (e.currentTarget as HTMLElement).dataset.photoId!;
          updateQuantity(photoId, -1);
        });
      });
      
      document.querySelectorAll('.remove-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          const photoId = (e.currentTarget as HTMLElement).dataset.photoId!;
          if (confirm('Weet je zeker dat je deze foto wilt verwijderen?')) {
            removeItem(photoId);
          }
        });
      });
    }
    
    // Clear cart
    document.getElementById('clearCart')?.addEventListener('click', () => {
      if (confirm('Weet je zeker dat je de hele winkelwagen wilt legen?')) {
        cart.clear();
        saveCart();
        renderCart();
      }
    });
    
    // Place order
    document.getElementById('placeOrderBtn')?.addEventListener('click', async () => {
      const items = Array.from(cart.values()).map(item => ({
        photoId: item.id,
        photoName: item.name,
        quantity: item.quantity,
      }));
      
      const btn = document.getElementById('placeOrderBtn') as HTMLButtonElement;
      btn.disabled = true;
      btn.innerHTML = `
        <svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        <span>Bezig met bestellen...</span>
      `;
      
      try {
        const { data, error } = await actions.placeOrder({ items });
        
        if (error) {
          alert('Fout: ' + error.message);
          btn.disabled = false;
          btn.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Bestelling Plaatsen</span>
          `;
          return;
        }
        
        cart.clear();
        saveCart();
        
        // Success notification
        const toast = document.createElement('div');
        toast.className = 'fixed top-8 right-8 bg-gradient-to-r from-[--color-brand-coral] to-[--color-brand-purple] text-gray-900 px-6 py-4 rounded-2xl shadow-2xl z-50';
        toast.innerHTML = `
          <div class="flex items-center space-x-3">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <p class="font-semibold">Bestelling Geplaatst!</p>
              <p class="text-sm opacity-90">Bestelnummer: ${data.orderNumber}</p>
            </div>
          </div>
        `;
        document.body.appendChild(toast);
        
        setTimeout(() => toast.remove(), 5000);
        
        // Redirect to orders page
        setTimeout(() => {
          window.location.href = '/orders';
        }, 2000);
      } catch (err) {
        alert('Fout bij het plaatsen van de bestelling');
        console.error(err);
        btn.disabled = false;
        btn.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span>Bestelling Plaatsen</span>
        `;
      }
    });
    
    // Initialize
    loadCart();
    renderCart();
  </script>
</Layout>
