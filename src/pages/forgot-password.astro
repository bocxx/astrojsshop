---
import Layout from "../layouts/Layout.astro";

if (Astro.locals.user) {
  return Astro.redirect("/");
}
---

<Layout title="Wachtwoord Vergeten">
  <div class="min-h-[80vh] flex items-center justify-center">
    <div class="max-w-md w-full mx-auto px-4">
      <!-- Background decoration -->
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div
          class="absolute top-20 right-20 w-72 h-72 bg-gradient-to-br from-[--color-brand-purple]/10 to-[--color-brand-coral]/10 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-20 left-20 w-96 h-96 bg-gradient-to-tr from-[--color-brand-blue]/10 to-[--color-brand-purple]/10 rounded-full blur-3xl"
        >
        </div>
      </div>

      <div
        class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 md:p-10 shadow-2xl border-2 border-[--color-brand-purple]/20 animate-fade-in"
      >
        <div class="text-center mb-8">
          <div
            class="w-20 h-20 mx-auto mb-5 bg-gradient-to-br from-[--color-brand-purple]/20 to-[--color-brand-coral]/20 rounded-full flex items-center justify-center"
          >
            <svg
              class="w-10 h-10 text-[--color-brand-purple]"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"
              ></path>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-[--color-brand-blue] mb-2">
            Wachtwoord Vergeten? ðŸ”‘
          </h1>
          <p class="text-sm text-[--color-brand-blue]/70">
            Geen probleem! Vul je e-mailadres in en we sturen je een reset link.
          </p>
        </div>

        <!-- Success message -->
        <div
          id="successMessage"
          class="hidden mb-5 p-4 bg-green-50 border-l-4 border-green-500 rounded-xl"
        >
          <div class="flex items-center">
            <svg
              class="w-5 h-5 text-green-500 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-sm text-green-700 font-medium">
              Als dit e-mailadres bij ons bekend is, ontvang je binnen enkele minuten een reset link.
            </span>
          </div>
        </div>

        <!-- Error message -->
        <div
          id="errorMessage"
          class="hidden mb-5 p-4 bg-red-50 border-l-4 border-red-500 rounded-xl"
        >
          <div class="flex items-center">
            <svg
              class="w-5 h-5 text-red-500 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span id="errorText" class="text-sm text-red-700 font-medium"></span>
          </div>
        </div>

        <form id="forgotPasswordForm" class="space-y-6">
          <div class="group">
            <label
              for="email"
              class="block text-sm font-semibold text-[--color-brand-blue] mb-2 flex items-center"
            >
              <svg
                class="w-4 h-4 mr-2 text-[--color-brand-purple]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                ></path>
              </svg>
              E-mailadres
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-5 py-4 bg-gradient-to-br from-[--color-brand-beige]/40 to-white border-2 border-[--color-brand-purple]/20 rounded-2xl focus:outline-none focus:ring-4 focus:ring-[--color-brand-purple]/20 focus:border-[--color-brand-purple] transition-all text-[--color-brand-blue] shadow-sm group-hover:border-[--color-brand-purple]/40"
              placeholder="jouw@email.nl"
            />
          </div>

          <button
            type="submit"
            id="submitBtn"
            class="w-full px-6 py-4 bg-gradient-to-r from-[#37469b] via-[#bd90c4] to-[#ff7e6d] text-white rounded-2xl hover:shadow-2xl hover:shadow-[#bd90c4]/30 hover:scale-[1.02] active:scale-95 transition-all duration-300 font-bold text-lg flex items-center justify-center space-x-2 group"
          >
            <span id="buttonText">Reset Link Versturen</span>
            <svg
              class="w-5 h-5 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </button>
        </form>

        <div class="relative my-8">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t-2 border-[--color-brand-purple]/10">
            </div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-[--color-brand-blue]/50 font-medium"
              >Of</span
            >
          </div>
        </div>

        <a
          href="/login"
          class="block w-full px-6 py-4 bg-white border-2 border-[--color-brand-purple]/20 text-[--color-brand-blue] rounded-2xl hover:bg-gradient-to-br hover:from-[--color-brand-beige]/30 hover:to-[--color-brand-purple]/10 hover:border-[--color-brand-purple] hover:shadow-lg transition-all duration-200 font-semibold text-center group"
        >
          <span class="flex items-center justify-center space-x-2">
            <svg
              class="w-5 h-5 group-hover:-translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11 17l-5-5m0 0l5-5m-5 5h12"></path>
            </svg>
            <span>Terug naar Inloggen</span>
          </span>
        </a>
      </div>
    </div>
  </div>

  <script>
    import { actions } from "astro:actions";

    const form = document.getElementById("forgotPasswordForm") as HTMLFormElement;
    const submitBtn = document.getElementById("submitBtn") as HTMLButtonElement;
    const buttonText = document.getElementById("buttonText");
    const successMessage = document.getElementById("successMessage");
    const errorMessage = document.getElementById("errorMessage");
    const errorText = document.getElementById("errorText");

    form?.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Hide messages
      successMessage?.classList.add("hidden");
      errorMessage?.classList.add("hidden");

      // Disable button and show loading
      submitBtn.disabled = true;
      if (buttonText) {
        buttonText.innerHTML = `
          <div class="flex items-center space-x-2">
            <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Verzenden...</span>
          </div>
        `;
      }

      const formData = new FormData(form);
      const { error } = await actions.requestPasswordReset(formData);

      if (error) {
        if (errorMessage && errorText) {
          errorText.textContent = error.message;
          errorMessage.classList.remove("hidden");
        }
        submitBtn.disabled = false;
        if (buttonText) {
          buttonText.textContent = "Reset Link Versturen";
        }
        return;
      }

      // Show success message
      successMessage?.classList.remove("hidden");
      form.reset();

      // Reset button
      submitBtn.disabled = false;
      if (buttonText) {
        buttonText.textContent = "Reset Link Versturen";
      }
    });
  </script>
</Layout>
