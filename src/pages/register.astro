---
import Layout from "../layouts/Layout.astro";

if (Astro.locals.user) {
  return Astro.redirect("/");
}
---

<Layout title="Registreren">
  <div class="min-h-[80vh] flex items-center justify-center py-12">
    <div class="max-w-md w-full mx-auto px-4">
      <!-- Background decoration -->
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div
          class="absolute top-10 left-10 w-80 h-80 bg-gradient-to-br from-[--color-brand-coral]/10 to-[--color-brand-purple]/10 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-10 right-10 w-96 h-96 bg-gradient-to-tl from-[--color-brand-blue]/10 to-[--color-brand-coral]/10 rounded-full blur-3xl"
        >
        </div>
      </div>

      <div
        class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 md:p-10 shadow-2xl border-2 border-[--color-brand-purple]/20 animate-fade-in"
      >
        <div class="text-center mb-8">
          <div
            class="w-24 h-24 mx-auto mb-5 transform hover:scale-110 hover:rotate-6 transition-all duration-300"
          >
            <img
              src="/logo.svg"
              alt="Foto's Logo"
              class="w-full h-full drop-shadow-2xl"
            />
          </div>
          <h1 class="text-3xl font-bold text-[--color-brand-blue] mb-2">
            Account Aanmaken ✨
          </h1>
          <p class="text-sm text-[--color-brand-blue]/70">
            Start met het bestellen van je favoriete foto's
          </p>
        </div>

        <!-- Error message -->
        <div
          id="errorMessage"
          class="hidden mb-5 p-4 bg-red-50 border-l-4 border-red-500 rounded-xl"
        >
          <div class="flex items-center">
            <svg
              class="w-5 h-5 text-red-500 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span id="errorText" class="text-sm text-red-700 font-medium"
            ></span>
          </div>
        </div>

        <form id="registerForm" class="space-y-6">
          <div class="group">
            <label
              for="name"
              class="block text-sm font-semibold text-[--color-brand-blue] mb-2 flex items-center"
            >
              <svg
                class="w-4 h-4 mr-2 text-[--color-brand-purple]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                ></path>
              </svg>
              Naam
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-5 py-4 bg-gradient-to-br from-[--color-brand-beige]/40 to-white border-2 border-[--color-brand-purple]/20 rounded-2xl focus:outline-none focus:ring-4 focus:ring-[--color-brand-purple]/20 focus:border-[--color-brand-purple] transition-all text-[--color-brand-blue] shadow-sm group-hover:border-[--color-brand-purple]/40"
              placeholder="Je volledige naam"
            />
          </div>

          <div class="group">
            <label
              for="email"
              class="block text-sm font-semibold text-[--color-brand-blue] mb-2 flex items-center"
            >
              <svg
                class="w-4 h-4 mr-2 text-[--color-brand-purple]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                ></path>
              </svg>
              E-mailadres
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-5 py-4 bg-gradient-to-br from-[--color-brand-beige]/40 to-white border-2 border-[--color-brand-purple]/20 rounded-2xl focus:outline-none focus:ring-4 focus:ring-[--color-brand-purple]/20 focus:border-[--color-brand-purple] transition-all text-[--color-brand-blue] shadow-sm group-hover:border-[--color-brand-purple]/40"
              placeholder="jouw@email.nl"
            />
          </div>

          <div class="group">
            <label
              for="password"
              class="block text-sm font-semibold text-[--color-brand-blue] mb-2 flex items-center"
            >
              <svg
                class="w-4 h-4 mr-2 text-[--color-brand-purple]"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
              Wachtwoord
            </label>
            <div class="relative">
              <input
                type="password"
                id="password"
                name="password"
                required
                minlength="8"
                class="w-full px-5 py-4 bg-gradient-to-br from-[--color-brand-beige]/40 to-white border-2 border-[--color-brand-purple]/20 rounded-2xl focus:outline-none focus:ring-4 focus:ring-[--color-brand-purple]/20 focus:border-[--color-brand-purple] transition-all text-[--color-brand-blue] shadow-sm group-hover:border-[--color-brand-purple]/40"
                placeholder="••••••••"
              />
              <button
                type="button"
                id="togglePassword"
                class="absolute right-4 top-1/2 -translate-y-1/2 text-[--color-brand-blue]/40 hover:text-[--color-brand-purple] transition-colors"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  ></path>
                </svg>
              </button>
            </div>
            <div
              class="mt-2 flex items-center text-xs text-[--color-brand-blue]/60"
            >
              <svg
                class="w-4 h-4 mr-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
              Minimaal 8 tekens vereist
            </div>
          </div>

          <button
            type="submit"
            id="submitBtn"
            class="w-full px-6 py-4 bg-gradient-to-r from-[--color-brand-coral] via-[--color-brand-purple] to-[--color-brand-blue] text-white rounded-2xl hover:shadow-2xl hover:shadow-[--color-brand-coral]/30 hover:scale-[1.02] active:scale-95 transition-all duration-300 font-bold text-lg flex items-center justify-center space-x-2 group"
          >
            <span id="buttonText">Account Aanmaken</span>
            <svg
              class="w-5 h-5 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </button>
        </form>

        <div class="relative my-8">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t-2 border-[--color-brand-purple]/10">
            </div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-[--color-brand-blue]/50 font-medium"
              >Al een account?</span
            >
          </div>
        </div>

        <a
          href="/login"
          class="block w-full px-6 py-4 bg-white border-2 border-[--color-brand-purple]/20 text-[--color-brand-blue] rounded-2xl hover:bg-gradient-to-br hover:from-[--color-brand-beige]/30 hover:to-[--color-brand-purple]/10 hover:border-[--color-brand-purple] hover:shadow-lg transition-all duration-200 font-semibold text-center group"
        >
          <span class="flex items-center justify-center space-x-2">
            <span>Inloggen</span>
            <svg
              class="w-5 h-5 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
              ></path>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </div>

  <script>
    import { actions } from "astro:actions";

    // Password toggle
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById(
      "password",
    ) as HTMLInputElement;

    togglePassword?.addEventListener("click", () => {
      const type = passwordInput.type === "password" ? "text" : "password";
      passwordInput.type = type;
    });

    // Form submission
    const form = document.getElementById("registerForm") as HTMLFormElement;
    const submitBtn = document.getElementById("submitBtn") as HTMLButtonElement;
    const buttonText = document.getElementById("buttonText");
    const errorMessage = document.getElementById("errorMessage");
    const errorText = document.getElementById("errorText");

    form?.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Hide previous errors
      errorMessage?.classList.add("hidden");

      // Disable button and show loading
      submitBtn.disabled = true;
      if (buttonText) {
        buttonText.innerHTML = `
          <div class="flex items-center space-x-2">
            <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Account aanmaken...</span>
          </div>
        `;
      }

      const formData = new FormData(form);
      const { data, error } = await actions.register(formData);

      if (error) {
        // Show error
        if (errorMessage && errorText) {
          if (error.message?.includes("UNIQUE") || error.code === "CONFLICT") {
            errorText.textContent =
              "Dit e-mailadres is al in gebruik. Probeer in te loggen.";
          } else {
            errorText.textContent =
              error.message || "Er is iets misgegaan. Probeer het opnieuw.";
          }
          errorMessage.classList.remove("hidden");
        }

        // Reset button
        submitBtn.disabled = false;
        if (buttonText) {
          buttonText.textContent = "Account Aanmaken";
        }
        return;
      }

      // Success - redirect
      if (buttonText) {
        buttonText.innerHTML = `
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Gelukt!</span>
          </div>
        `;
      }

      setTimeout(() => {
        window.location.href = "/";
      }, 500);
    });
  </script>
</Layout>
