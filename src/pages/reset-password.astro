---
import Layout from "../layouts/Layout.astro";

if (Astro.locals.user) {
  return Astro.redirect("/");
}

const token = Astro.url.searchParams.get("token");
---

<Layout title="Nieuw Wachtwoord Instellen">
  <div class="min-h-[80vh] flex items-center justify-center">
    <div class="max-w-md w-full mx-auto px-4">
      <!-- Background decoration -->
      <div class="absolute inset-0 -z-10 overflow-hidden">
        <div
          class="absolute top-20 right-20 w-72 h-72 bg-gradient-to-br from-[--color-brand-purple]/10 to-[--color-brand-coral]/10 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-20 left-20 w-96 h-96 bg-gradient-to-tr from-[--color-brand-blue]/10 to-[--color-brand-purple]/10 rounded-full blur-3xl"
        >
        </div>
      </div>

      <div
        class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 md:p-10 shadow-2xl border-2 border-[--color-brand-purple]/20 animate-fade-in"
      >
        {!token ? (
          <div class="text-center">
            <div class="w-20 h-20 mx-auto mb-5 bg-red-100 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
              </svg>
            </div>
            <h1 class="text-2xl font-bold text-[--color-brand-blue] mb-2">
              Ongeldige Link
            </h1>
            <p class="text-sm text-[--color-brand-blue]/70 mb-6">
              Deze reset link is ongeldig of mist de benodigde token.
            </p>
            <a
              href="/forgot-password"
              class="inline-block px-6 py-3 bg-gradient-to-r from-[#37469b] via-[#bd90c4] to-[#ff7e6d] text-white rounded-2xl hover:shadow-lg transition-all font-semibold"
            >
              Nieuwe Link Aanvragen
            </a>
          </div>
        ) : (
          <>
            <div class="text-center mb-8">
              <div
                class="w-20 h-20 mx-auto mb-5 bg-gradient-to-br from-[--color-brand-purple]/20 to-[--color-brand-coral]/20 rounded-full flex items-center justify-center"
              >
                <svg
                  class="w-10 h-10 text-[--color-brand-purple]"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  ></path>
                </svg>
              </div>
              <h1 class="text-3xl font-bold text-[--color-brand-blue] mb-2">
                Nieuw Wachtwoord üîê
              </h1>
              <p class="text-sm text-[--color-brand-blue]/70">
                Kies een sterk wachtwoord van minimaal 8 tekens.
              </p>
            </div>

            <!-- Success message -->
            <div
              id="successMessage"
              class="hidden mb-5 p-4 bg-green-50 border-l-4 border-green-500 rounded-xl"
            >
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-500 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm text-green-700 font-medium">
                  Je wachtwoord is gewijzigd! Je wordt doorgestuurd naar de inlogpagina...
                </span>
              </div>
            </div>

            <!-- Error message -->
            <div
              id="errorMessage"
              class="hidden mb-5 p-4 bg-red-50 border-l-4 border-red-500 rounded-xl"
            >
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-red-500 mr-2"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span id="errorText" class="text-sm text-red-700 font-medium"></span>
              </div>
            </div>

            <form id="resetPasswordForm" class="space-y-6">
              <input type="hidden" name="token" value={token} />
              
              <div class="group">
                <label
                  for="password"
                  class="block text-sm font-semibold text-[--color-brand-blue] mb-2 flex items-center"
                >
                  <svg
                    class="w-4 h-4 mr-2 text-[--color-brand-purple]"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                    ></path>
                  </svg>
                  Nieuw Wachtwoord
                </label>
                <div class="relative">
                  <input
                    type="password"
                    id="password"
                    name="password"
                    required
                    minlength="8"
                    class="w-full px-5 py-4 bg-gradient-to-br from-[--color-brand-beige]/40 to-white border-2 border-[--color-brand-purple]/20 rounded-2xl focus:outline-none focus:ring-4 focus:ring-[--color-brand-purple]/20 focus:border-[--color-brand-purple] transition-all text-[--color-brand-blue] shadow-sm group-hover:border-[--color-brand-purple]/40"
                    placeholder="Minimaal 8 tekens"
                  />
                  <button
                    type="button"
                    id="togglePassword"
                    class="absolute right-4 top-1/2 -translate-y-1/2 text-[--color-brand-blue]/40 hover:text-[--color-brand-purple] transition-colors"
                  >
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                      ></path>
                    </svg>
                  </button>
                </div>
              </div>

              <div class="group">
                <label
                  for="confirmPassword"
                  class="block text-sm font-semibold text-[--color-brand-blue] mb-2 flex items-center"
                >
                  <svg
                    class="w-4 h-4 mr-2 text-[--color-brand-purple]"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                  </svg>
                  Bevestig Wachtwoord
                </label>
                <input
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  required
                  minlength="8"
                  class="w-full px-5 py-4 bg-gradient-to-br from-[--color-brand-beige]/40 to-white border-2 border-[--color-brand-purple]/20 rounded-2xl focus:outline-none focus:ring-4 focus:ring-[--color-brand-purple]/20 focus:border-[--color-brand-purple] transition-all text-[--color-brand-blue] shadow-sm group-hover:border-[--color-brand-purple]/40"
                  placeholder="Herhaal je wachtwoord"
                />
              </div>

              <button
                type="submit"
                id="submitBtn"
                class="w-full px-6 py-4 bg-gradient-to-r from-[#37469b] via-[#bd90c4] to-[#ff7e6d] text-white rounded-2xl hover:shadow-2xl hover:shadow-[#bd90c4]/30 hover:scale-[1.02] active:scale-95 transition-all duration-300 font-bold text-lg flex items-center justify-center space-x-2 group"
              >
                <span id="buttonText">Wachtwoord Wijzigen</span>
                <svg
                  class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
              </button>
            </form>
          </>
        )}
      </div>
    </div>
  </div>

  <script>
    import { actions } from "astro:actions";

    // Password toggle
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("password") as HTMLInputElement;

    togglePassword?.addEventListener("click", () => {
      const type = passwordInput.type === "password" ? "text" : "password";
      passwordInput.type = type;
    });

    // Form submission
    const form = document.getElementById("resetPasswordForm") as HTMLFormElement;
    const submitBtn = document.getElementById("submitBtn") as HTMLButtonElement;
    const buttonText = document.getElementById("buttonText");
    const successMessage = document.getElementById("successMessage");
    const errorMessage = document.getElementById("errorMessage");
    const errorText = document.getElementById("errorText");

    form?.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Hide messages
      successMessage?.classList.add("hidden");
      errorMessage?.classList.add("hidden");

      const password = (document.getElementById("password") as HTMLInputElement).value;
      const confirmPassword = (document.getElementById("confirmPassword") as HTMLInputElement).value;

      // Validate passwords match
      if (password !== confirmPassword) {
        if (errorMessage && errorText) {
          errorText.textContent = "Wachtwoorden komen niet overeen";
          errorMessage.classList.remove("hidden");
        }
        return;
      }

      // Disable button and show loading
      submitBtn.disabled = true;
      if (buttonText) {
        buttonText.innerHTML = `
          <div class="flex items-center space-x-2">
            <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Opslaan...</span>
          </div>
        `;
      }

      const formData = new FormData(form);
      const { error } = await actions.resetPassword(formData);

      if (error) {
        if (errorMessage && errorText) {
          errorText.textContent = error.message;
          errorMessage.classList.remove("hidden");
        }
        submitBtn.disabled = false;
        if (buttonText) {
          buttonText.textContent = "Wachtwoord Wijzigen";
        }
        return;
      }

      // Show success message and redirect
      successMessage?.classList.remove("hidden");
      if (buttonText) {
        buttonText.innerHTML = `
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span>Gelukt!</span>
          </div>
        `;
      }

      setTimeout(() => {
        window.location.href = "/login";
      }, 2000);
    });
  </script>
</Layout>
